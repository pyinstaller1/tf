    wins = gw.getWindowsWithTitle('Architect')
    if not wins:
        raise RuntimeError("Architect 창을 찾을 수 없음")
    win = wins[0]

    if win.isMinimized:
        win.restore()

    app = Application().connect(handle=win._hWnd)
    win_app = app.window(handle=win._hWnd)

    for _ in range(10):
        try:
            win_app.set_focus()
            print("포커스 성공")
            break
        except RuntimeError:
            print("응답 없음, 1초 후 재시도")
            time.sleep(1)
